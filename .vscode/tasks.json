{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build all",
      "dependsOn": [
        "build navigation",
        "build pc client"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build navigation",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}/server/navigation"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "build pc client",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceRoot}/client"
      },
      "group": {
        "kind": "build"
      }
    },
  ]
}